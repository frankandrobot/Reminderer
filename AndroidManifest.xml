<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frankandrobot.reminderer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <provider
            android:name=".Database.DatabaseProvider"
            android:authorities="com.frankandrobot.reminderer.dbprovider"
            android:exported="false" />
        <!-- Using exported=false prevents other apps from using the database -->

        <activity
            android:name=".RemindererActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/app_name" >
        </activity>

        <receiver android:name=".Alarm.AlarmReceiver" >
            <intent-filter>
                <action android:name="com.frankandrobot.remimderer.TASK_ALARM" />
                <action android:name="alarm_killed" />
                <action android:name="cancel_snooze" />
            </intent-filter>
        </receiver>
        
        <!-- Widget -->
        <receiver
            android:name=".Widget.RemindererWidgetProvider"
            android:label="Reminderer" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/main_widget_info" />
        </receiver>
    </application>

</manifest>